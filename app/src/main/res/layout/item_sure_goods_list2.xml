<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_f6"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/iv_item_sure_order"
            android:layout_width="90dp"
            android:layout_height="90dp"
            tools:src="@drawable/banner2"
            android:scaleType="fitCenter"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_item_sure_order_goods_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="按摩精油通经络全身推油玫瑰开背推拿刮痧推油正品"
                android:maxLines="2"
                android:lines="2"
                android:ellipsize="end"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                >

                <TextView
                    android:id="@+id/tv_item_sure_order_goods_guige"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="大马士革玫瑰纯露125ml"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_item_sure_order_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="¥12.5"
                    android:textColor="@color/green"
                    android:textSize="16sp"
                    />
                <LinearLayout
                    android:id="@+id/ll_change_num"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/tv_sure_order_goods_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#f5f5f5"
                        android:gravity="center"
                        android:minWidth="33dp"
                        tools:text="22"
                        />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>