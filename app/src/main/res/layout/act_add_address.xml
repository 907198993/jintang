<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/background_f2"
              android:orientation="vertical"
    >

    <include layout="@layout/app_title"/>

    <com.sk.jintang.view.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_editaddress_commit"
            android:background="@color/background_f2"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:text="收货人"
                        android:textColor="@color/gray_99"
                        android:textSize="15sp"
                        />

                    <com.github.customview.MyEditText
                        android:id="@+id/et_editaddress_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:hint="请输入收货人"
                        android:textSize="15sp"
                        android:imeOptions="actionNext"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="2px"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:text="联系电话"
                        android:textColor="@color/gray_99"
                        android:textSize="15sp"
                        />

                    <com.github.customview.MyEditText
                        android:id="@+id/et_editaddress_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:hint="请输入联系电话"
                        android:textSize="15sp"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="2px"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:text="所在地区"
                        android:textColor="@color/gray_99"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/tv_editaddress_area"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:hint="请选择地区"
                        android:textColor="@color/gray_99"
                        android:paddingLeft="7dp"
                        android:textSize="15sp"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jiantou_right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="2px"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:text="详情地址"
                        android:textColor="@color/gray_99"
                        android:textSize="15sp"
                        />

                    <!--<com.github.customview.MyEditText-->
                        <!--android:id="@+id/et_editaddress_detail"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:gravity="top"-->
                        <!--android:hint="请输入详情地址"-->
                        <!--android:maxLines="1"-->
                        <!--android:lines="1"-->
                        <!--android:layout_marginRight="30dp"-->
                        <!--android:paddingTop="15dp"-->
                        <!--tools:text="afasfdsadf"-->
                        <!--android:textSize="15sp"-->
                        <!--app:my_et_hiddenClear="true"-->
                        <!--/>-->
                    <TextView
                        android:id="@+id/et_editaddress_detail"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:hint="请输入详情地址"
                        android:textColor="@color/gray_99"
                        android:paddingLeft="7dp"
                        android:textSize="15sp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jiantou_right"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="2px"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="4"
                        android:text="门牌号"
                        android:textColor="@color/gray_99"
                        android:textSize="15sp"
                        />

                    <com.github.customview.MyEditText
                        android:id="@+id/et_editaddress_door"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:hint="详细地址，例：1号楼一单元101"
                        android:textSize="15sp"
                        android:imeOptions="actionNext"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="设为默认地址"
                        android:textColor="@color/gray_33"
                        android:textSize="15sp"
                        />

                    <com.suke.widget.SwitchButton
                        android:id="@+id/sb_address_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:sb_checked="false"
                        app:sb_show_indicator="false"
                        />
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <com.github.customview.MyTextView
            android:id="@+id/tv_editaddress_commit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="保存地址"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:my_tv_corner_radius="4dp"
            app:my_tv_press="@color/green_press"
            app:my_tv_solid="@color/green"
            />
    </com.sk.jintang.view.ProgressLayout>
</LinearLayout>