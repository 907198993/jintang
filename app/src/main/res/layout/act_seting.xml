<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
<include layout="@layout/app_title"/>
    <LinearLayout
        android:id="@+id/ll_seting_yjfk"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/gray_33"
            />
        <ImageView
            android:padding="5dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/jiantou_right"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:text="消息接收设置"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/gray_33"
            />
        <com.suke.widget.SwitchButton
            android:id="@+id/sb_seting_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:sb_show_indicator="false"
            app:sb_checked="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:layout_marginTop="2px"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:text="版本说明"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/gray_33"
            />
        <TextView
            android:id="@+id/tv_seting_version"
            android:layout_width="wrap_content"
            android:gravity="left"
            android:layout_height="wrap_content"
            tools:text="V1.1"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/gray_66"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_setting_new_version"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/white"
        android:layout_marginTop="2px"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:text="检查新版本"
            android:layout_marginRight="10dp"
            android:textSize="14sp"
            android:textColor="@color/gray_33"
            />

        <com.github.customview.MyTextView
            android:id="@+id/tv_setting_new_version"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:text="NEW"
            android:textColor="@color/white"
            app:my_tv_solid="@color/red"
            app:my_tv_corner_radius="11dp"
            android:gravity="center"
            android:textSize="12sp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou_right"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <com.github.customview.MyTextView
        android:id="@+id/tv_seting_exit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="退出登录"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:my_tv_solid="@color/green"
        app:my_tv_press="@color/green_press"
        android:gravity="center"
        app:my_tv_corner_radius="4dp"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        />
</LinearLayout>