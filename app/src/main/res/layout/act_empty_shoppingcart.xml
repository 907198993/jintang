<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:paddingTop="20dp"
    >
    <ImageView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/empty_shopping"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购物车是空的"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="top"
        android:background="@color/white"
        android:layout_margin="20dp"
        >
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2px"
            />
        <com.github.customview.MyTextView
            android:id="@+id/tv_shopping_qianggou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="马上抢购"
            app:my_tv_solid="@color/white"
            android:textColor="@color/gray_99"
            app:my_tv_all_line="true"
            app:my_tv_corner_radius="4dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:ems="5"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2px"
            />
        <com.github.customview.MyTextView
            android:id="@+id/tv_shopping_looklook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随便逛逛"
            android:gravity="center"
            app:my_tv_solid="@color/white"
            app:my_tv_all_line="true"
            app:my_tv_corner_radius="4dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/green"
            app:my_tv_border_color="@color/green"
            android:ems="5"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2px"
            />
    </LinearLayout>
</LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/tuijian_text"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_shopping_tuijian"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
    </android.support.v7.widget.RecyclerView>
</LinearLayout>