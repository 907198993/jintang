<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/shop_background"

    android:gravity="center"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <com.github.customview.MyImageView
            android:id="@+id/iv_goods_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:src="@drawable/home29"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="一次性洗脸巾洁面巾"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            android:maxLines="2"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/gray_33"
            android:gravity="center|left"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="12sp"
                android:textColor="@color/shop_title_background"
                />
            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                tools:text="12.5"
                android:textSize="12sp"
                android:textColor="@color/shop_title_background"
                />
            <ImageView
                android:id="@+id/iv_goods_add_shopping"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/add_shopping"
                android:layout_gravity="bottom|right"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>