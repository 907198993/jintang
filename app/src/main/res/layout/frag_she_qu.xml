<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        android:orientation="horizontal"
        android:background="@color/green"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >
        <com.github.customview.MyLinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:my_ll_corner_radius="15dp"
            app:my_ll_solid="@color/white"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_marginLeft="5dp"
            >
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/search"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/et_shequ_search"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="搜索你感兴趣的帖子"
                android:textSize="12sp"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:paddingLeft="6dp"
                android:maxLines="1"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:layout_marginRight="20dp"
                />
        </com.github.customview.MyLinearLayout>
        <ImageView
            android:id="@+id/iv_shequ_tiezi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/shequ5"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            />
    </LinearLayout>
    <com.sk.jintang.view.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@id/pcfl_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ptr_resistance="2.1"
        app:ptr_ratio_of_header_height_to_refresh="1.2"
        >
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nsv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_f2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:id="@+id/iv_shequ"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        tools:src="@drawable/banner"
                        android:scaleType="centerCrop"
                        />
                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="这些精油您真的知道吗？"
                        android:layout_gravity="bottom"
                        android:layout_margin="10dp"
                        android:textColor="@color/gray_99"
                        android:textSize="15sp"
                        />-->
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:visibility="gone"
                    >
                    <LinearLayout
                        android:id="@+id/ll_shequ_dpzr"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/shequ6"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="店铺转让"
                            android:textColor="@color/green"
                            android:textSize="15sp"
                            android:layout_marginTop="7dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_shequ_qgdp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/shequ7"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="求购店铺"
                            android:textColor="@color/green"
                            android:textSize="15sp"
                            android:layout_marginTop="7dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_shequ_zyzp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/shequ8"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="足浴招聘"
                            android:textColor="@color/green"
                            android:textSize="15sp"
                            android:layout_marginTop="7dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_shequ_jsqz"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/shequ9"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="技师求职"
                            android:textColor="@color/green"
                            android:textSize="15sp"
                            android:layout_marginTop="7dp"
                            />
                    </LinearLayout>
                </LinearLayout>
               <android.support.v7.widget.RecyclerView
                   android:id="@+id/rv_shequ_huati"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="2px"
                   >
               </android.support.v7.widget.RecyclerView>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_shequ"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>
    </com.sk.jintang.view.ProgressLayout>
</LinearLayout>