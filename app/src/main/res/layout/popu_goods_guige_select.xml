<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/ll_guige_bg"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >


            <android.support.v4.widget.NestedScrollView
                android:id="@+id/nsv_goods_detail_guige"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="bottom"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp"
                            >

                            <View
                                android:layout_width="100dp"
                                android:layout_height="1px"
                                />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="12dp"
                                android:layout_marginLeft="13dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                >

                                <TextView
                                    android:id="@+id/tv_guige_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/green"
                                    android:textSize="19sp"
                                    tools:text="¥97.00"
                                    />

                                <TextView
                                    android:id="@+id/tv_guige_kucun"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    tools:text="库存299件"
                                    />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/iv_guige_cancle"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:layout_gravity="top"
                                android:padding="10dp"
                                android:src="@drawable/cancel"
                                android:focusableInTouchMode="true"
                                android:focusable="true"
                                />
                        </LinearLayout>

                        <com.github.customview.MyImageView
                            android:id="@+id/iv_guige_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="10dp"
                            android:scaleType="centerCrop"
                            app:my_iv_radius="4dp"
                            tools:src="@drawable/banner"
                            />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical"
                        >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="@color/background_f2"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="产品规格"
                                android:textColor="@color/gray_66"
                                android:textSize="16sp"
                                />
                            <com.github.customview.FlowLayout
                                android:id="@+id/fl_guige"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                >

                                <com.github.customview.MyTextView
                                    android:layout_width="97dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    android:text="黄色*50ml"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    app:my_tv_corner_radius="4dp"
                                    app:my_tv_solid="#e0e0e0"
                                    />

                                <com.github.customview.MyTextView
                                    android:layout_width="97dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    app:my_tv_corner_radius="4dp"
                                    app:my_tv_solid="@color/green"
                                    tools:text="黄色*50ml"
                                    />

                                <com.github.customview.MyTextView
                                    android:layout_width="97dp"
                                    android:layout_height="30dp"
                                    android:layout_marginRight="10dp"
                                    android:gravity="center"
                                    android:text="黄色*50ml"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    app:my_tv_corner_radius="4dp"
                                    app:my_tv_solid="#e0e0e0"
                                    />
                            </com.github.customview.FlowLayout>
                        </LinearLayout>


                        <com.github.customview.MyLinearLayout
                            android:id="@+id/ll_guige_content"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"

                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:paddingTop="5dp"
                            app:my_ll_top_line="true"
                            app:my_ll_bottom_line="true"
                            >
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="购买数量"
                                android:textColor="@color/gray_66"
                                android:textSize="16sp"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                >

                                <ImageView
                                    android:id="@+id/iv_guige_jian"
                                    android:layout_width="33dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/jian"
                                    />

                                <com.github.customview.MyEditText
                                    android:id="@+id/tv_guige_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#f5f5f5"
                                    android:gravity="center"
                                    android:imeOptions="actionNext"
                                    android:inputType="number"
                                    android:maxLines="1"
                                    android:minWidth="33dp"
                                    android:textColor="@color/gray_66"
                                    android:textSize="13sp"
                                    app:my_et_hiddenClear="true"
                                    tools:text="22"
                                    />

                                <ImageView
                                    android:id="@+id/iv_guige_jia"
                                    android:layout_width="33dp"
                                    android:layout_height="30dp"
                                    android:layout_marginLeft="1px"
                                    android:src="@drawable/jia"
                                    />
                            </LinearLayout>
                        </com.github.customview.MyLinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

            <LinearLayout
                android:id="@+id/ll_order_select_bottom"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white"
                >

                <TextView
                    android:id="@+id/tv_guige_sure"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@color/green2"
                    android:gravity="center"
                    android:text="确认"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tv_guige_addshoppingcart"
                    android:layout_width="0dp"
                    android:layout_height="49dp"
                    android:layout_weight="1"
                    android:background="@color/green1"
                    android:gravity="center"
                    android:text="加入购物车"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    />
                 <TextView
                     android:id="@+id/tv_guige_buy"
                     android:layout_width="0dp"
                     android:layout_height="49dp"
                     android:layout_weight="1"
                     android:background="@color/green2"
                     android:gravity="center"
                     android:text="立即购买"
                     android:textColor="@color/white"
                     android:textSize="15sp"
                     />

            </LinearLayout>

    </LinearLayout>
</LinearLayout>