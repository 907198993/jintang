<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_vertical"
        >

    <View
        android:id="@id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        />
    <LinearLayout
        android:id="@+id/ll_home_top"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        android:orientation="horizontal"
        android:background="@color/green"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <com.github.customview.MyLinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:my_ll_corner_radius="15dp"
            app:my_ll_solid="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/search"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/et_search_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="请输入搜索内容"
                android:textSize="12sp"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:paddingLeft="6dp"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                />
            <ImageView
                android:id="@+id/iv_search_scan"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:src="@drawable/scan"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                />
        </com.github.customview.MyLinearLayout>
        <TextView
            android:id="@+id/tv_search_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="搜索"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
    </LinearLayout>
    <com.sk.jintang.view.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:gravity="center_vertical"
        >
        <android.support.design.widget.TabLayout
            android:id="@+id/mTb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabSelectedTextColor="@color/black"
            app:tabIndicatorColor="@color/shop_title_background"
            app:tabTextColor="@color/shop_tab_unselect">
        </android.support.design.widget.TabLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="历史搜索"
            android:textSize="15sp"
            android:textColor="@color/gray_33"
            />
        <ImageView
            android:id="@+id/iv_search_delete"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:src="@drawable/order12"
            android:padding="10dp"
            />
    </LinearLayout>
    <com.github.customview.FlowLayout
        android:id="@+id/fl_search_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        >
        <com.github.customview.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="玫瑰精油"
            android:gravity="center"
            app:my_tv_solid="#f5f5f5"
            app:my_tv_corner_radius="3dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:layout_marginRight="10dp"
            /><com.github.customview.MyTextView
        android:layout_width="84dp"
        android:layout_height="30dp"
        android:text="玫瑰精油"
        android:gravity="center"
        app:my_tv_solid="#f5f5f5"
        app:my_tv_corner_radius="3dp"
        android:layout_marginRight="10dp"
        />
        <com.github.customview.MyTextView
            android:layout_width="84dp"
            android:layout_height="30dp"
            android:text="玫瑰精油"
            android:gravity="center"
            app:my_tv_solid="#f5f5f5"
            app:my_tv_corner_radius="3dp"
            android:layout_marginRight="10dp"
            />
    </com.github.customview.FlowLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门搜索"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:textColor="@color/gray_33"
        />
    <com.github.customview.FlowLayout
        android:id="@+id/fl_search_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        >
        <com.github.customview.MyTextView
            android:layout_width="84dp"
            android:layout_height="30dp"
            android:text="玫瑰精油"
            android:gravity="center"
            app:my_tv_solid="#f5f5f5"
            app:my_tv_corner_radius="3dp"
            android:layout_marginRight="10dp"
            /><com.github.customview.MyTextView
        android:layout_width="84dp"
        android:layout_height="30dp"
        android:text="玫瑰精油"
        android:gravity="center"
        app:my_tv_solid="#f5f5f5"
        app:my_tv_corner_radius="3dp"
        android:layout_marginRight="10dp"
        />
        <com.github.customview.MyTextView
            android:layout_width="84dp"
            android:layout_height="30dp"
            android:text="玫瑰精油"
            android:gravity="center"
            app:my_tv_solid="#f5f5f5"
            app:my_tv_corner_radius="3dp"
            android:layout_marginRight="10dp"
            />
    </com.github.customview.FlowLayout>
    </LinearLayout>
    </com.sk.jintang.view.ProgressLayout>
</LinearLayout>
    <com.github.customview.MyLinearLayout
        android:id="@+id/ll_search_yuyin"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        app:my_ll_corner_radius="23dp"
        app:my_ll_solid="@color/gray_ea"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:my_ll_press="@color/gray_d7"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/img1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gray_66"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            />
    </com.github.customview.MyLinearLayout>

</RelativeLayout>