<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="10dp"
    >
    <ImageView
        android:id="@+id/iv_tuan_gou"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:src="@drawable/banner2"
        android:scaleType="centerCrop"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/tv_tuan_gou_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="按摩精油通经络全身推油身体肩颈足部玫瑰开背推拿刮痧推油正品"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            >
            <TextView
                android:id="@+id/tv_tuan_gou_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥12.5"
                android:textColor="@color/green"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tv_tuan_gou_before_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥139"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
            <com.github.customview.MyTextView
                android:id="@+id/tv_tuan_gou_num"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10人团"
                app:my_tv_all_line="true"
                android:textColor="@color/green"
                app:my_tv_border_color="@color/green"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                app:my_tv_corner_radius="3dp"
                />
            <com.github.customview.MyTextView
                android:id="@+id/tv_tuan_gou_go"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去参团"
                android:drawableRight="@drawable/jiantou_right1"
                app:my_tv_solid="@color/green"
                android:textColor="@color/white"
                android:paddingLeft="8dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                app:my_tv_corner_radius="4dp"
                android:drawablePadding="3dp"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>