<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
              android:id="@+id/dl_order_class"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.sk.jintang.view.ProgressLayout
            android:id="@id/pl_load"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/background_f2"
                >
                <View
                    android:id="@id/status_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/app_title_height"
                    android:orientation="horizontal"
                    android:background="@color/home_orange"
                    android:gravity="center_vertical"
                    >
                    <ImageView
                        android:id="@+id/iv_goods_class_scan"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:padding="10dp"
                        android:src="@drawable/saoyisao"
                        />
                    <com.github.customview.MyLinearLayout
                        android:id="@+id/ll_goods_class_search"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        app:my_ll_corner_radius="15dp"
                        app:my_ll_solid="@color/white"
                        android:focusableInTouchMode="true"
                        android:focusable="true"
                        android:layout_marginLeft="5dp"
                        >
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/search"
                            android:layout_marginLeft="10dp"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:textSize="12sp"
                            android:paddingBottom="0dp"
                            android:paddingTop="0dp"
                            android:paddingLeft="6dp"
                            android:maxLines="1"
                            />
                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/img1"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            />
                    </com.github.customview.MyLinearLayout>
                    <ImageView
                        android:id="@+id/iv_goods_msg"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/message"
                        android:padding="10dp"
                        />
                </LinearLayout>
                <com.github.customview.MyLinearLayout
                    android:id="@+id/ll_goods_order"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:my_ll_bottom_line="true"
                    app:my_ll_border_width="2px"
                    >
                    <com.github.customview.MyCheckBox
                        android:id="@+id/cb_order_class_all"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="全部商品"
                        android:visibility="gone"
                        android:gravity="center"
                        android:button="@null"
                        android:checked="false"
                        app:my_checkbox_checked="@drawable/jiantou_down_green"
                        app:my_checkbox_normal="@drawable/jiantou_down_green"
                        app:my_checkbox_checked_color="@color/green"
                        app:my_checkbox_normal_color="@color/gray_33"
                        app:my_checkbox_checked_drawable="right"
                        android:paddingRight="5dp"
                        android:paddingLeft="5dp"
                        android:textSize="15sp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        />
                    <TextView
                        android:id="@+id/tv_goods_tuijian"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="推荐"
                        android:gravity="center"
                        android:textColor="@color/gray_33"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tv_goods_price"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="价格"
                        android:gravity="center"
                        android:textColor="@color/gray_33"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tv_goods_xl"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="销量"
                        android:gravity="center"
                        android:textColor="@color/gray_33"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:id="@+id/tv_order_class_sx"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="筛选"
                        android:visibility="gone"
                        android:gravity="center"
                        android:drawableRight="@drawable/order1"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/gray_33"
                        />
                </com.github.customview.MyLinearLayout>
                <in.srain.cube.views.ptr.PtrClassicFrameLayout
                    android:id="@id/pcfl_refresh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:ptr_resistance="2.1"
                    app:ptr_ratio_of_header_height_to_refresh="1.2"
                    >
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_order_class"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        >

                    </android.support.v7.widget.RecyclerView>
                </in.srain.cube.views.ptr.PtrClassicFrameLayout>

            </LinearLayout>
        </com.sk.jintang.view.ProgressLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_order_class_shaixuan"
        android:layout_gravity="right"
        android:layout_width="270dp"
        android:layout_height="match_parent">
        <include layout="@layout/order_class_right"/>
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>