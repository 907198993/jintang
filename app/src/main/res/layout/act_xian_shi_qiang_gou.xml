<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
<include layout="@layout/app_title"/>
    <com.sk.jintang.view.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_xianshi_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/gray_99"
                >
                <android.support.design.widget.TabLayout
                    android:id="@+id/tl_xianshi"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    app:tabIndicatorHeight="0dp"
                    app:tabPaddingEnd="0dp"
                    app:tabPaddingStart="0dp"
                    app:tabBackground="@color/gray_66"
                    app:tabMode="scrollable"
                    >
                </android.support.design.widget.TabLayout>
            </LinearLayout>
            <com.sk.jintang.view.MyViewPager
                android:id="@+id/vp_xianshi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            </com.sk.jintang.view.MyViewPager>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_xianshi_nodata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="暂无活动"
                android:gravity="center"
                android:textSize="15sp"
                android:background="@color/white"
                android:visibility="gone"
                android:clickable="true"
                />
        </LinearLayout>
    </com.sk.jintang.view.ProgressLayout>
</LinearLayout>