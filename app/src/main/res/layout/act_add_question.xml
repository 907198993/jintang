<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
<include layout="@layout/app_title"/>
    <com.github.customview.MyEditText
        android:id="@+id/et_goods_question_fabu"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/white"
        android:gravity="top"
        android:padding="5dp"
        app:my_et_hiddenClear="true"
        android:textSize="13sp"
        app:my_et_solid="@color/white"
        android:hint="请输入内容"
        app:my_et_corner_radius="3dp"
        android:inputType="text"
        android:imeOptions="actionNext"
        />
    <com.github.customview.MyTextView
        android:id="@+id/tv_goods_question_fabu"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="发布"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        app:my_tv_solid="@color/green"
        app:my_tv_press="@color/green_press"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        app:my_tv_corner_radius="4dp"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_gravity="bottom"
        />
</LinearLayout>