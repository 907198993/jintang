<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shop_background"
    android:orientation="vertical">
    <com.sk.jintang.view.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!--标题-->
    <LinearLayout
        android:id="@+id/ll_order_detail_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
        <View
            android:id="@id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingRight="8dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv_goods_detail_back"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@mipmap/back"
                />
                <com.github.customview.MyLinearLayout
                    android:id="@+id/ll_home_search"
                    android:layout_marginLeft="20dp"
                    android:layout_centerInParent="true"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    app:my_ll_corner_radius="30dp"
                    app:my_ll_solid="@color/white"
                    android:layout_toRightOf="@+id/iv_goods_detail_back"
                    android:focusableInTouchMode="true"
                    android:focusable="true"
                    >
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/search"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:paddingLeft="6dp"
                        android:layout_marginRight="16dp"
                        android:maxLines="1"
                        android:hint="美国大"
                        />
                </com.github.customview.MyLinearLayout>
            <LinearLayout
                android:id="@+id/linear_image_category"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                >
                <ImageView

                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/category"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="分类"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_goods_detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"

        >



        <TextView
            android:id="@+id/shop_goods_category_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:gravity="center"
            android:text="宝贝分类"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/gray_99"/>
        <TextView
            android:id="@+id/shop_introduce_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/white"
            android:gravity="center"
            android:text="店铺简介"
            android:textColor="@color/black"
            android:textSize="15sp"
            />
         <View
             android:layout_width="1px"
             android:background="@color/gray_99"
             android:layout_height="50dp"/>
        <LinearLayout
            android:id="@+id/ll_goods_detail_kefu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingTop="2dp"
            >

            <com.github.customview.MyImageView
                android:id="@+id/iv_goods_detail_kefu"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/kefu_orange"
                app:my_iv_radius="11dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="客服"
                android:textSize="11sp"
                />
        </LinearLayout>
    </LinearLayout>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_order_detail_top"
        android:layout_above="@id/ll_goods_detail_bottom"
        android:layout_alignParentStart="true"
        >


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                app:layout_scrollFlags="scroll|enterAlways"
                android:padding="8dp"

                android:background="@color/green">

                <RelativeLayout
                    android:id="@+id/ll_my_info"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <com.github.customview.MyImageView
                        android:id="@+id/shop_img"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:my_iv_radius="10dp"
                        android:background="@color/active_dianying1"
                        />
                    <LinearLayout
                        android:layout_toRightOf="@id/shop_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="60dp"
                        android:orientation="vertical">
                        <com.github.customview.MyTextView
                            android:id="@+id/shop_title"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="14dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"

                             />
                        <com.github.customview.MyTextView
                            android:id="@+id/shop_address"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="14dp"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            />
                    </LinearLayout>

                    <com.github.customview.MyTextView
                        android:id="@+id/tv_attention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="2dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp"
                        android:text="收藏店铺"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:my_tv_corner_radius="10dp"
                        app:my_tv_press="@color/shop_collection_button"
                        app:my_tv_solid="@color/shop_collection_button"

                        />
                </RelativeLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_centerInParent="true"
                    android:paddingLeft="15dp"
                    >

                </LinearLayout>

                >
            </LinearLayout>
            <!--
            AppBarLayout里放入的都可以跟着向上滑动滑出布局的的，
            添加app:layout_scrollFlags="scroll"属性可以滑出布局
            TabLayout没有添加，所以停留在顶部
            -->

            <android.support.design.widget.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/black"
                app:tabIndicatorColor="@color/shop_title_background"
                app:tabTextColor="@color/shop_tab_unselect" />


        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
            </android.support.v4.view.ViewPager>

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>
    </com.sk.jintang.view.ProgressLayout>
</RelativeLayout>
