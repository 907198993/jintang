<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="2px"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="20dp"
        >
        <com.github.customview.MyImageView
            android:id="@+id/iv_all_evaluate_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:scaleType="centerCrop"
            android:src="@drawable/people"
            app:my_iv_radius="18dp"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/tv_all_evaluate_name"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="龙飞凤舞"
                android:textColor="#3A5E90"
                />
            <TextView
                android:id="@+id/tv_all_evaluate_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="这个方法去试过，减肥确实是有用的"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/tv_tie_zi_huifu_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2017-09-09"
                    android:ems="6"
                    />
                <TextView
                    android:id="@+id/tv_tie_zi_huifu_huifu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回复"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_tie_zi_detail_zan_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            >
            <ImageView
                android:id="@+id/iv_tie_zi_detail_zan_evaluate"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/zan_normal"
                android:layout_marginBottom="1dp"
                />
            <TextView
                android:id="@+id/tv_tie_zi_detail_zan_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="42"
                android:gravity="bottom"
                android:textColor="@color/gray_66"
                android:layout_marginLeft="3dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>