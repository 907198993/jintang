<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
<include layout="@layout/app_title"/>
    <com.sk.jintang.view.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_evaluate_detail_commit"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/background_f2"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:padding="10dp"
                    >
                    <ImageView
                        android:id="@+id/iv_evaluate_detail"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        tools:src="@drawable/banner"
                        android:scaleType="fitCenter"
                        android:layout_marginRight="13dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="描述相符"
                        android:textColor="@color/gray_66"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        >
                        <me.zhanghai.android.materialratingbar.MaterialRatingBar
                            android:id="@+id/rb_evaluate_detail_star"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:numStars="5"
                            android:rating="3"
                            android:isIndicator="true"
                            app:mrb_progressTint="#FFC000"
                            android:stepSize="1"
                            style="@style/Widget.MaterialRatingBar.RatingBar"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_evaluate_detail_star"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="好"
                        android:gravity="center_vertical|right"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2px"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="10dp"
                    >
                    <TextView
                        android:id="@+id/tv_evaluate_detail_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="看不出掉毛不掉毛，后来用清水漂时特意看看水面有没有漂浮毛毛，基本上没有，搭起来时还特意擦擦湿手，看粘毛不粘，也是基本上没有，因为以前买过一条浴巾，粘的全身都是。"
                        android:paddingRight="10dp"
                        />
                    <com.github.customview.FlowLayout
                        android:id="@+id/fl_evaluate_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        >
                    </com.github.customview.FlowLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="追加评价"
                        android:textSize="16sp"
                        android:textColor="@color/gray_33"
                        />
                    <EditText
                        android:id="@+id/et_evaluate_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="60dp"
                        tools:text="亲，我们期待你更深层次的评价我们期待你更深层次的评价我们期待你更深层次的评价 …"
                        android:background="@color/white"
                        android:hint="亲,我们期待你更深层次的评价"
                        android:textColorHint="@color/gray_99"
                        android:textColor="@color/gray_66"
                        android:textSize="13sp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:maxLength="300"
                        android:gravity="top"
                        />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_evaluate_detail_addimg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="2px"
                        >

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <com.github.customview.MyTextView
            android:id="@+id/tv_evaluate_detail_commit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="发布追评"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            app:my_tv_solid="@color/green"
            app:my_tv_press="@color/green_press"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            app:my_tv_corner_radius="4dp"
            android:textSize="15sp"
            />
    </RelativeLayout>

    </com.sk.jintang.view.ProgressLayout>
</LinearLayout>