<include layout="@layout/app_title"/>
    <com.sk.jintang.view.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_above="@+id/ll_tuan_gou_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_f2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.youth.banner.Banner
                    android:id="@+id/bn_tuan_gou_detail"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:visibility="visible"
                    app:delay_time="5000"
                    app:image_scale_type="fit_xy"
                    app:scroll_time="2000"
                    ></com.youth.banner.Banner>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >
                    <TextView
                        android:id="@+id/tv_tuan_gou_detail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="【阿芙】按摩精油通经络全身推油身体肩颈足部开背推拿刮痧推油正品100ml"
                        android:textColor="@color/gray_33"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥"
                            android:textColor="@color/green"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/tv_tuan_gou_detail_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            tools:text="97.00"
                            android:textColor="@color/green"
                            android:textSize="17sp"
                            />
                        <TextView
                            android:id="@+id/tv_tuan_gou_detail_before_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            tools:text="¥97.00"
                            android:textColor="@color/gray_66"
                            android:textSize="11sp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="bottom|right"

                            >
                            <com.github.customview.MyTextView
                                android:id="@+id/tv_tuan_gou_detail_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="10人团"
                                android:textColor="@color/green"
                                app:my_tv_border_color="@color/green"
                                app:my_tv_all_line="true"
                                android:paddingLeft="7dp"
                                android:paddingRight="7dp"
                                android:paddingBottom="3dp"
                                android:paddingTop="3dp"
                                app:my_tv_corner_radius="4dp"
                                app:my_tv_solid="@color/white"
                                />
                            <TextView
                                android:id="@+id/tv_tuan_gou_detail_buy_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="已有1160人参与"
                                android:layout_marginLeft="16dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
