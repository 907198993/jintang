                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="此团还差"
                                android:textSize="13sp"
                                />
                            <TextView
                                android:id="@+id/tv_tuan_gou_detail_need_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="6"
                                android:textColor="@color/green"
                                android:textSize="15sp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="人"
                                android:textSize="13sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="距离结束还有 "
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                />
                            <TextView
                                android:id="@+id/tv_tuan_gou_detail_end_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="00:27:15"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/green"
                                android:textSize="13sp"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_goods_detail_question"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginTop="2px"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    >
                    <TextView
                        android:id="@+id/tv_goods_detail_question"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray_33"
                        android:textSize="14sp"
                        android:text="商品提问"
                        />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/jiantou_right"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="2px"
                    android:padding="10dp"
                    android:background="@color/white"
                    >
                    <TextView
                        android:id="@+id/tv_tuan_gou_detail_evaluate_num"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        tools:text="评价(999)"
                        android:textColor="@color/gray_33"
                        android:textSize="14sp"
                        />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/jiantou_right"
                        />
                </LinearLayout>
