<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
              android:orientation="vertical"
    >

    <include layout="@layout/app_title"/>

    <com.sk.jintang.view.ProgressLayout
        android:id="@id/pl_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_f2"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/green"
                android:gravity="center"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="佣金金额"
                    android:textColor="@color/white"
                    />

                <com.github.customview.MyLinearLayout
                    android:layout_width="94dp"
                    android:layout_height="94dp"
                    android:gravity="center"
                    app:my_ll_corner_radius="47dp"
                    app:my_ll_solid="#63f2bb"
                    >

                    <com.github.customview.MyTextView
                        android:id="@+id/tv_yongjin"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:gravity="center"
                        android:textColor="@color/green"
                        app:my_tv_corner_radius="42dp"
                        app:my_tv_solid="@color/white"
                        tools:text="¥299.32"
                        />
                </com.github.customview.MyLinearLayout>
            </LinearLayout>

            <com.github.customview.MyTextView
                android:id="@+id/tv_yongjin_tx"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="立即提现"
                android:textColor="@color/white"
                app:my_tv_corner_radius="4dp"
                app:my_tv_press="@color/green_press"
                app:my_tv_solid="@color/green"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                >

                <View
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:background="@color/green"
                    />

                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/green"
                    />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="佣金明细"
                    android:textColor="@color/gray_33"
                    android:textSize="14sp"/>
            </LinearLayout>

            <in.srain.cube.views.ptr.PtrClassicFrameLayout
                android:id="@id/pcfl_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ptr_ratio_of_header_height_to_refresh="1.2"
                app:ptr_resistance="2.1"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_my_yong_jin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2px"
                    >

                </android.support.v7.widget.RecyclerView>
            </in.srain.cube.views.ptr.PtrClassicFrameLayout>

        </LinearLayout>
    </com.sk.jintang.view.ProgressLayout>
</LinearLayout>