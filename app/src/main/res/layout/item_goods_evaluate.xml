<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/white"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            >

            <com.github.customview.MyImageView
                android:id="@+id/iv_item_goods_evaluate_img"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/people"
                app:my_iv_radius="18dp"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/tv_item_goods_evaluate_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                tools:text="萨福萨福"
                android:textColor="@color/gray_33"
                />

            <TextView
                android:id="@+id/tv_item_goods_evaluate_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2016/10/10"
                android:textColor="@color/gray_99"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_goods_evaluate_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="谢谢养御宝宝给我寄来的礼品，已经是养御的忠实客户了，昨天用了皮肤滑滑的，希望我小绿人茁壮成长。"
            android:textColor="@color/gray_33"
            android:paddingRight="10dp"
            />

        <TextView
            android:id="@+id/tv_item_goods_evaluate_guige"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="大马士革玫瑰纯露125ml"
            android:textColor="@color/gray_99"
            android:paddingRight="10dp"
            />

        <LinearLayout
            android:id="@+id/ll_item_goods_evaluate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:src="@drawable/banner"
                android:layout_marginRight="10dp"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_zhui_ping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="追加评价"
                android:textSize="16sp"
                android:textColor="@color/gray_33"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tv_item_goods_evaluate_content_zj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                tools:text="谢谢养御宝宝给我寄来的礼品，已经是养御的忠实客户了，昨天用了皮肤滑滑的，希望我小绿人茁壮成长。"
                android:textColor="@color/gray_33"
                android:paddingRight="10dp"
                />
            <LinearLayout
                android:id="@+id/ll_item_goods_evaluate_zj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/banner"
                    android:layout_marginRight="10dp"
                    />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/banner"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>