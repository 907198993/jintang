<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout android:id="@+id/dl_order_class"
                                        xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_f2"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
        <View
            android:id="@id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <android.support.v7.widget.Toolbar
            android:id="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/green"
            android:gravity="center_vertical"
            app:titleTextColor="@color/gray_66"
            app:layout_collapseMode="pin"
            >
            <TextView
                android:id="@id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="19sp"
                tools:text="title"
                android:visibility="gone"
                />
            <com.github.customview.MyLinearLayout
                android:layout_width="230dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:my_ll_corner_radius="15dp"
                app:my_ll_solid="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_gravity="center"
                >
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/search"
                    android:layout_marginLeft="10dp"
                    />
                <EditText
                    android:id="@+id/et_search_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:hint="请输入搜索内容"
                    android:textSize="12sp"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp"
                    android:paddingLeft="6dp"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_marginRight="15dp"
                    />
            </com.github.customview.MyLinearLayout>
            <ImageView
                android:id="@id/app_right_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:maxHeight="?attr/actionBarSize"
                android:paddingRight="10dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@id/app_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="right_title"
                />
        </android.support.v7.widget.Toolbar>
        <com.github.customview.MyLinearLayout
            android:id="@+id/ll_search_order"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:my_ll_bottom_line="true"
            app:my_ll_border_width="2px"
            >

            <TextView
                android:id="@+id/tv_goods_search_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="价格排序"
                android:gravity="center"
                android:textColor="@color/gray_33"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_goods_search_xl"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="销量排序"
                android:gravity="center"
                android:textColor="@color/gray_33"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_order_class_sx"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="筛选"
                android:gravity="center"
                android:drawableRight="@drawable/order1"
                android:paddingRight="23dp"
                android:paddingLeft="23dp"
                android:textSize="15sp"
                android:textColor="@color/gray_33"
                />
        </com.github.customview.MyLinearLayout>

        <com.sk.jintang.view.ProgressLayout
            android:id="@id/pl_load"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <in.srain.cube.views.ptr.PtrClassicFrameLayout
                android:id="@id/pcfl_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:ptr_ratio_of_header_height_to_refresh="1.2"
                app:ptr_resistance="2.1"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_search_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                </android.support.v7.widget.RecyclerView>
            </in.srain.cube.views.ptr.PtrClassicFrameLayout>
        </com.sk.jintang.view.ProgressLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_order_class_shaixuan"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="right">

        <include layout="@layout/order_class_right"/>
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>