<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
    <include layout="@layout/app_title"/>
    <LinearLayout
        android:id="@+id/ll_yongjin_tixian"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="到账账户"
            android:textSize="16sp"
            android:textColor="@color/gray_33"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/iv_yongjin_tx_bank"
                android:layout_width="30dp"
                android:layout_height="30dp"
                tools:src="@drawable/bank_icon"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/tv_yongjin_tx_accout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="中国银行(9908)"
                android:textSize="16sp"
                android:textColor="@color/gray_33"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/jiantou_right"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="2px"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textSize="20sp"
            android:textColor="@color/gray_33"
            />
        <com.github.customview.MyEditText
            android:id="@+id/et_yongjin_tx_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="请输入提现金额"
            android:textColorHint="#dcdcdc"
            android:textSize="16sp"
            app:my_et_hiddenClear="true"
            android:maxLines="1"
            android:inputType="numberDecimal"
            />
        <TextView
            android:id="@+id/tv_yongjin_tx_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="全部转出"
            android:textColor="@color/green"
            android:gravity="center"
            />
    </LinearLayout>
    <com.github.customview.MyTextView
        android:id="@+id/tv_yongjin_tx_commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="提现"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="@color/white"
        app:my_tv_solid="@color/green"
        app:my_tv_press="@color/green_press"
        app:my_tv_corner_radius="3dp"
        android:textSize="17sp"
        />
</LinearLayout>