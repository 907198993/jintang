<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_f2"
    >
    <android.support.v4.widget.NestedScrollView
        android:layout_above="@+id/tv_dpzr_commit"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:src="@drawable/dian_pu"
                        android:scaleType="centerCrop"
                        />
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/shequ18"
                        android:layout_centerInParent="true"
                        />
                    <android.support.v7.widget.Toolbar
                        android:id="@id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@color/transparent"
                        android:gravity="center_vertical"
                        app:titleTextColor="@color/gray_66"
                        app:layout_collapseMode="pin"
                        android:layout_alignParentTop="true"
                        >
                        <TextView
                            android:id="@id/app_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="19sp"
                            tools:text="title"
                            />

                        <ImageView
                            android:id="@id/app_right_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:maxHeight="?attr/actionBarSize"
                            android:paddingRight="10dp"
                            android:visibility="gone"
                            />

                        <TextView
                            android:id="@id/app_right_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            tools:text="right_title"
                            />
                    </android.support.v7.widget.Toolbar>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="区域"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="10dp"
                        android:hint="请输入区域"
                        android:textSize="14sp"
                        android:textColor="@color/gray_33"
                        android:gravity="right|center_vertical"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jiantou_right"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"
                    android:layout_marginTop="2px"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地段"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="20dp"
                        android:hint="10字以上"
                        android:textSize="14sp"
                        android:textColor="@color/gray_33"
                        android:gravity="right|center_vertical"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="面积"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="20dp"
                        android:hint="平米"
                        android:textSize="14sp"
                        android:textColor="@color/gray_33"
                        android:gravity="right|center_vertical"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"
                    android:layout_marginTop="2px"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="租金"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="20dp"
                        android:hint="元／m²"
                        android:textSize="14sp"
                        android:textColor="@color/gray_33"
                        android:gravity="right|center_vertical"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="类型"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="10dp"
                        android:hint="商业街卖场"
                        android:textSize="14sp"
                        android:textColor="@color/gray_33"
                        android:gravity="right|center_vertical"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jiantou_right"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="标题"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="20dp"
                        android:hint="8-28字"
                        android:textSize="14sp"
                        android:textColor="@color/gray_33"
                        android:gravity="right|center_vertical"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"
                    android:layout_marginTop="2px"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="描述"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="20dp"
                        android:hint="10字以上"
                        android:textSize="14sp"
                        android:textColor="@color/gray_33"
                        android:gravity="right|center_vertical"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="联系人"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="20dp"
                        android:hint="至少2字"
                        android:textSize="14sp"
                        android:textColor="@color/gray_33"
                        android:gravity="right|center_vertical"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"
                    android:layout_marginTop="2px"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号"
                        android:textSize="14sp"
                        />
                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:layout_marginLeft="10dp"
                        android:paddingRight="20dp"
                        android:hint="18655117604"
                        android:textSize="14sp"
                        android:textColor="@color/gray_33"
                        android:gravity="right|center_vertical"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"
                    android:layout_marginTop="2px"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份"
                        android:textSize="14sp"
                        />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal"
                        >
                        <com.github.customview.MyRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个人"
                            app:my_radio_checked="@drawable/order17"
                            app:my_radio_normal="@drawable/order18"
                            android:textSize="15sp"
                            android:paddingLeft="3dp"
                            android:checked="true"
                            />
                        <com.github.customview.MyRadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="中介"
                            app:my_radio_checked="@drawable/order17"
                            app:my_radio_normal="@drawable/order18"
                            android:textSize="15sp"
                            android:paddingLeft="3dp"
                            android:checked="false"
                            android:layout_marginLeft="20dp"
                            />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    <com.github.customview.MyTextView
        android:id="@+id/tv_dpzr_commit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="发布"
        android:textColor="@color/white"
        android:layout_margin="10dp"
        app:my_tv_solid="@color/green"
        app:my_tv_press="@color/green_press"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        app:my_tv_corner_radius="4dp"
        android:textSize="15sp"
        />
</RelativeLayout>